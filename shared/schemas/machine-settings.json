{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/machine-settings.json",
    "title": "MachineSettings",
    "type": "object",
    "properties": {
        "screenshots": {
            "$ref": "#/definitions/ScreenshotSettings"
        },
        "activity": {
            "$ref": "#/definitions/ActivitySettings"
        },
        "network": {
            "$ref": "#/definitions/NetworkSettings"
        },
        "audit": {
            "$ref": "#/definitions/AuditSettings"
        },
        "accessControl": {
            "$ref": "#/definitions/AccessControlSettings"
        }
    },
    "required": [
        "screenshots",
        "activity",
        "audit",
        "accessControl"
    ],
    "definitions": {
        "ScreenshotSettings": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "intervalSeconds": {
                    "type": "integer",
                    "default": 300
                },
                "filterDuplicates": {
                    "type": "boolean",
                    "default": true
                }
            },
            "required": [
                "enabled",
                "intervalSeconds",
                "filterDuplicates"
            ]
        },
        "ActivitySettings": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "intervalSeconds": {
                    "type": "integer",
                    "default": 10
                }
            },
            "required": [
                "enabled",
                "intervalSeconds"
            ]
        },
        "NetworkSettings": {
            "type": "object",
            "properties": {
                "pingIntervalSeconds": {
                    "type": "integer",
                    "default": 300
                }
            },
            "required": [
                "pingIntervalSeconds"
            ]
        },
        "AuditSettings": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "filters": {
                    "$ref": "#/definitions/AuditFilters"
                }
            },
            "required": [
                "enabled",
                "filters"
            ]
        },
        "AuditFilters": {
            "type": "object",
            "properties": {
                "security": {
                    "type": "boolean",
                    "default": true
                },
                "system": {
                    "type": "boolean",
                    "default": false
                },
                "application": {
                    "type": "boolean",
                    "default": false
                }
            },
            "required": [
                "security",
                "system",
                "application"
            ]
        },
        "AccessControlSettings": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "scheduleMode": {
                    "type": "string",
                    "enum": [
                        "simple",
                        "custom"
                    ],
                    "default": "simple"
                },
                "violationAction": {
                    "$ref": "#/definitions/ViolationAction"
                },
                "schedule": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/AccessScheduleWindow"
                    }
                }
            },
            "required": [
                "enabled",
                "violationAction",
                "schedule"
            ]
        },
        "AccessScheduleWindow": {
            "type": "object",
            "properties": {
                "dayOfWeek": {
                    "$ref": "#/definitions/DayOfWeek"
                },
                "startTime": {
                    "type": "string",
                    "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$",
                    "default": "00:00"
                },
                "endTime": {
                    "type": "string",
                    "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$",
                    "default": "00:00"
                }
            },
            "required": [
                "dayOfWeek",
                "startTime",
                "endTime"
            ]
        },
        "DayOfWeek": {
            "type": "string",
            "enum": [
                "monday",
                "tuesday",
                "wednesday",
                "thursday",
                "friday",
                "saturday",
                "sunday"
            ],
            "description": "Day of week (monday-sunday)"
        },
        "ViolationAction": {
            "type": "string",
            "enum": [
                "logoff",
                "shutdown"
            ],
            "default": "logoff"
        }
    }
}