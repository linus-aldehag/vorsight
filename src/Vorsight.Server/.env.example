# Copy this file to .env and configure your values

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# CORS Configuration
CLIENT_ORIGIN=http://localhost:3000

# Security (JWT will be generated by installer for future web UI authentication)
WEB_PASSPHRASE=CHANGE_THIS_DURING_INSTALLATION
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS_LONG
JWT_EXPIRY=30d

# Database (Prisma uses this for migrations and queries)
DATABASE_URL=file:./data/vorsight.db
